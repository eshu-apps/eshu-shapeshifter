# Maintainer: Eshu Team <support@eshu-apps.com>
pkgname=eshu-shapeshifter-git
pkgver=r5.de5b522
pkgrel=1
pkgdesc="Transform your Linux distro without reinstalling - migrate between distributions seamlessly (git version)"
arch=('x86_64')
url="https://eshu-apps.com"
license=('MIT')
depends=('gcc-libs' 'sqlite')
makedepends=('cargo' 'rust' 'git')
provides=('eshu-shapeshifter')
conflicts=('eshu-shapeshifter')
source=("git+https://github.com/eshu-apps/eshu-shapeshifter.git")
sha256sums=('SKIP')

pkgver() {
    cd eshu-shapeshifter
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
    cd eshu-shapeshifter
    export RUSTUP_TOOLCHAIN=stable
    cargo fetch --locked --target "$CARCH-unknown-linux-gnu"
}

build() {
    cd eshu-shapeshifter
    export RUSTUP_TOOLCHAIN=stable
    export CARGO_TARGET_DIR=target
    cargo build --frozen --release --all-features
}

check() {
    cd eshu-shapeshifter
    export RUSTUP_TOOLCHAIN=stable
    cargo test --frozen --all-features
}

package() {
    cd eshu-shapeshifter

    # Install binary
    install -Dm755 "target/release/eshu-shapeshifter" "$pkgdir/usr/bin/eshu-shapeshifter"

    # Install license
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

    # Install documentation
    install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"

    # Create config directory
    install -dm755 "$pkgdir/etc/eshu-shapeshifter"
}

# vim:set ts=2 sw=2 et:
